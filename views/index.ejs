<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Hisaab Kitaab</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-['Helvetica'] min-h-screen text-gray-900">
  <main class="w-full min-h-screen">

    <!-- Navigation -->
    <nav class="flex flex-col md:flex-row justify-between items-center px-10 py-5 bg-white shadow-md sticky top-0 z-50">
      <h3 class="text-2xl md:text-3xl font-bold tracking-tight flex items-center gap-2">ðŸ“Š Hisab Kitaab</h3>
      <div class="navlinks flex gap-5 mt-3 md:mt-0">
        <a href="/" class="px-4 py-2 rounded-full bg-gray-200 text-gray-800 font-medium hover:bg-gray-300 transition">Home</a>
        <a href="/create" class="px-4 py-2 rounded-full bg-gray-200 text-gray-800 font-medium hover:bg-gray-300 transition">Create New Hisaab</a>
      </div>
    </nav>

    <!-- Hisaab List -->
    <div class="px-5 md:px-10 py-10 max-w-5xl mx-auto">
      <h3 class="text-3xl font-semibold mb-8 text-center">All Hisaab Kitaab</h3>

      <% if(files.length > 0) { %>
        <div class="flex flex-col gap-4">
          <% files.forEach((file) => { %>
            <div class="flex flex-col md:flex-row justify-between items-center bg-white rounded-2xl shadow p-4 md:p-6 hover:shadow-lg transition">
              
              <!-- File Name and Link -->
              <div class="flex items-center gap-4">
                <h4 class="text-xl md:text-2xl font-mono"><%= file.split(".")[0] %></h4>
                <a href="/hisaab/<%= file %>" class="flex items-center justify-center w-8 h-8 bg-gray-200 rounded-full hover:bg-gray-300 transition">
                  <i class="ri-arrow-right-line text-gray-800"></i>
                </a>
              </div>

              <!-- Actions -->
              <div class="flex gap-4 mt-3 md:mt-0">
                <a href="/edit/<%= file %>" class="px-3 py-2 bg-gray-200 rounded-md hover:bg-gray-300 transition">
                  <i class="ri-pencil-line text-gray-800"></i>
                </a>
                <a href="/delete/<%= file %>" class="px-3 py-2 bg-gray-200 rounded-md hover:bg-gray-300 transition">
                  <i class="ri-delete-bin-line text-gray-800"></i>
                </a>
              </div>

            </div>
          <% }) %>
        </div>
      <% } else { %>
        <h4 class="text-center text-gray-500 mt-10 text-lg">No hisaabs yet. Create one to see it here.</h4>
      <% } %>

    </div>
  </main>
</body>

</html>
